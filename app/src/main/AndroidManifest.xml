<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.com.secretsafe">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AyarlarActivity"
            android:label="@string/title_activity_ayarlar" />
        <activity android:name=".activity.KlasikKayitActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activity.FingerPrintActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name=".activity.CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ChildCategoryActivity"
            android:label="@string/title_activity_child_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.ChildDetailActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
    </application>

</manifest>