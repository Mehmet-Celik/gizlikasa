<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!--<Button
            android:id="@+id/btn_kayit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@android:color/darker_gray"
            android:onClick="butonaDokunuldu"
            android:text="KAYIT OL"
            android:textColor="@android:color/background_dark" />-->

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="25px"
            android:layout_marginStart="8dp"
            android:layout_marginTop="54dp"
            android:orientation="vertical"
            android:paddingLeft="30dp">

            <EditText
                android:id="@+id/et_ad"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:ems="7"
                android:hint="Kullancı Adı"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textColorLink="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_sifre"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:cursorVisible="false"
                android:ems="8"
                android:hint="Şifre"
                android:inputType="textPassword"
                android:linksClickable="false"
                android:selectAllOnFocus="false"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textColorLink="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_kayit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:clickable="true"
                android:onClick="butonaDokunuldu"
                android:text="Hesabın yok mu ? Yeni hesap oluştur.."
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="450dp"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btn_temizle"
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_weight="1"
                android:background="@color/errorText"
                android:elevation="0dp"
                android:onClick="butonaDokunuldu"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20"
                android:text="Temizle"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_gir"
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_weight="1"
                android:background="@color/errorText"
                android:onClick="butonaDokunuldu"
                android:shadowRadius="60"
                android:text="Giriş"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
